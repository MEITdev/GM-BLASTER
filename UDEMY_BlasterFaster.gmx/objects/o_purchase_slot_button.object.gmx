            <string>/// Purchase the gun

// loop through the choices (weapons on the ship)
//for (i = 0; i &lt; global.ship.ship_slots - 1; i++)
//{
if is_in_the_list == false
{
    total_price += global.ship.slot[owner_slot].price;
    show_debug_message("BUY BUTTON. gun not in list. Price set to = " +string(total_price));
}
else
{
    total_price = 0;
    show_debug_message("BUY BUTTON. gun IN list. Price set to = " +string(total_price));

}
//}

// if the player has enough money, save the ship
if (global.current_player.credits - total_price) &gt;= 0
{
    // update the amount of credits available

    // UNCOMMENT AFTER TESTING (decrements credits after purchase)
    global.current_player.credits = global.current_player.credits - total_price;
        
    // save the player and the ship configuration 
    update_player(global.current_player.save_slot);
    save_player_ship(global.current_player.ship_save_file);
    show_debug_message("BUY BUTTON. Gun price before LOAD = " 
        + string(global.ship.slot[owner_slot].price));

    
    // now load the data so everything is current
    load_player_data(global.current_player.save_slot);
    //load_player_ship(global.current_player.ship_save_file);

    
    // TESTING
    global.purchase_update[owner_slot] = true;
    
      
    dialog_box(room_width/2 + 91, room_height/2, 72, 220, "Done!", "Changes saved! Thank you!", 3);
    global.avatar = noone;
//    dialog.ttl = 10;    
}
else
{
    // otherwise show a dialog box
    dialog_box(room_width/2 + 91, room_height/2, 72, 220, "Insufficient funds!", "Not enough money. Sorry, changes will not be saved!", 5);
    global.avatar = noone;
//    dialog.ttl = 10;    
}

// Reset the total price
total_price = 0;

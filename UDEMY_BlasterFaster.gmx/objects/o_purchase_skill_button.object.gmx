// here check all the existing skills and add the new ones, then save the player data
for (i=0; i &lt; array_length_1d(global.current_player.skills_known); i++)
{
    skill_already_known = false;
    if global.current_player.skills_known[i] == global.current_player.skill_selected
    {
        // skill is already in the list
        skill_already_known = true;
    }
    else
    {
        // Save the selected skill
        // decrease the number of skill points
        if global.current_player.skill_points &gt; 0 &amp;&amp; skill_already_known == false
        {
            global.current_player.skill_id = global.current_player.skill_selected;
            global.current_player.skill_points -= 1;
            global.current_player.skills_known[array_length_1d(global.current_player.skills_known)] = global.current_player.skill_id;
        }                
    }
};

// DEBUG DISPLAY THE array
for (i=0; i &lt; array_length_1d(global.current_player.skills_known); i++)
{
    show_debug_message("known skill ID: " + string(global.current_player.skills_known[i]));
}

// Save the player information
update_player(global.current_player.save_slot);   

// now load player data
